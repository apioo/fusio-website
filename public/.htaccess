RewriteEngine On
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule (.*) /index.php/$1 [L]

RewriteCond %{REQUEST_URI} /license
RewriteRule ^(.*)$ https://github.com/apioo/fusio/blob/master/LICENSE [R=301]

RewriteCond %{REQUEST_URI} /documentation/(.*)
RewriteRule ^(.*)$ https://docs.fusio-project.org/ [R=301]

RewriteCond %{REQUEST_URI} /labels/(.*)
RewriteRule ^(.*)$ /blog [R=301]

RewriteCond %{REQUEST_URI} /blog/category/(.*)
RewriteRule ^(.*)$ /blog [R=301]

RewriteCond %{REQUEST_URI} /forum/(.*)
RewriteRule ^(.*)$ https://groups.google.com/g/fusio [R=301]
